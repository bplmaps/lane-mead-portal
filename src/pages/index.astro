---
import Container from "@components/container.astro";
import StoryGrid from "@components/storygrid.astro";
import CollectionGrid from "@components/collectiongrid.astro";
import Hero from "@components/hero.astro";
import SectionHead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";

import data from "instance.json";
---

<Layout title={data.title}>
  <Hero 
      title={data.title}
      splashText={data.splashText}
      heroText={data.description}
      headerImage={data.headerImage}
      />
  <Container>
    <SectionHead text="Stories"/>
    <StoryGrid />
    <SectionHead text="Explore Collection Groups"/>
    <CollectionGrid />
  </Container>
</Layout>

