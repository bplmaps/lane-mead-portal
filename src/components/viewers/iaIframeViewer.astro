---
interface Props {
    id: string;
}

const { id } = Astro.props;

const frameUrl = new URL(`https://archive.org/embed/${id}`);
---


<div id="outer">
    <iframe id="iaframe" src={frameUrl.toString()} allowfullscreen></iframe>
</div>

<style>
    #outer {
        width: 100%;
        height: 800px;
        margin: 0;
        padding: 0;
        background-color: #333;
    }
    #iaframe {
        width: 100%;
        height: 100%;
    }
</style>