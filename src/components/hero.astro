---
import { Image } from 'astro:assets';

export interface Props {
  heroText: string;
  splashText: string;
  headerImage: {
    src: string;
    alt: string;
  };
}

const { heroText, splashText, headerImage } = Astro.props;
---

<div class="relative isolate overflow-hidden bg-gray-900 px-6 py-24 sm:py-32 lg:px-8 mb-8">
  <Image 
    src={headerImage.src} 
    alt={headerImage.alt} 
    inferSize={true}
    class="absolute inset-0 -z-10 w-full object-cover brightness-50"
    />

  <div class="mx-24 max-w-2xl text-left">
    <h2 class="text-4xl font-bold tracking-tight text-white sm:text-6xl font-serif">{splashText}</h2>
    <p class="mt-6 text-2xl font-semibold leading-8 text-yellow-100">{heroText}</p>
  </div>
</div>